<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>s1</servlet-name>
        <servlet-class>servlets.s1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>s2</servlet-name>
        <servlet-class>servlets.s2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emp_list</servlet-name>
        <servlet-class>servlets.emp_list</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>personnel_controleur</servlet-name>
        <servlet-class>servlets.personnel_controleur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evaluation_controleur</servlet-name>
        <servlet-class>servlets.Evaluation_controleur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evaluation_Taux_controleur_CDD</servlet-name>
        <servlet-class>servlets.Evaluation_Taux_controleur_CDD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evaluation_Taux_controleur_CDI</servlet-name>
        <servlet-class>servlets.Evaluation_Taux_controleur_CDI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s1</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>s2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emp_list</servlet-name>
        <url-pattern>/emp_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>personnel_controleur</servlet-name>
        <url-pattern>/personnel_controleur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evaluation_controleur</servlet-name>
        <url-pattern>/Evaluation_controleur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evaluation_Taux_controleur_CDD</servlet-name>
        <url-pattern>/Evaluation_Taux_controleur_CDD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evaluation_Taux_controleur_CDI</servlet-name>
        <url-pattern>/Evaluation_Taux_controleur_CDI</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
